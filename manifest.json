{
	"background": {
		"scripts": ["background/background.js"]
	},

	"manifest_version": 2,
	"name": "Universal Search",
	"version": "0.0.0.1",

	"description": "A better search bar for chrome by TheGreatRambler",

	"browser_action": {
		"default_icon": "icons/search.png",
		"default_popup": "popup/popup.html",
		"default_title": "Universal Search"
	},

	"icons": {
		"128": "icons/search.png"
	},

	"permissions": [
		"activeTab",
		"tabs",
		"storage"
	]
}